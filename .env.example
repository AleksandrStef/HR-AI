# Environment variables for HR AI system
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
DEBUG=true
HOST=127.0.0.1
PORT=8000

# Notification Configuration
ENABLE_TEAMS_NOTIFICATIONS=false
TEAMS_WEBHOOK_URL=

ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
HR_EMAIL_RECIPIENTS=hr@company.com,manager@company.com

# Database Configuration
DATABASE_URL=sqlite:///hr_ai.db

# Analysis Configuration
CONFIDENCE_THRESHOLD=0.7
ANALYSIS_SCHEDULE_CRON=0 9 * * 1

# Google Drive Integration
ENABLE_GOOGLE_DRIVE=false
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_TOKEN_FILE=token.json
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_DRIVE_SYNC_INTERVAL=300